@page
@model MyStore.Pages.Clients.CreateModel
@{
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        * {
            padding: 0px;
            margin: 0px;
            box-sizing: border-box;
        }
       
    </style>

</head>

<body class="bg-zinc-100 ">
    @if (Model.errorMessage.Length > 0)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-2 py-1 rounded relative" role="alert">
            <strong class="font-bold">@Model.errorMessage!</strong>
            <span class="block sm:inline">Seriously bad happened.</span>
            <span class="absolute top-0 bottom-0 right-0 px-2 py-1">
                <svg class="fill-current h-4 w-5 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z" /></svg>
            </span>
        </div>
    }
    <h3 class="text-center font-bold text-slate-500 text-2xl">New Clients</h3>
    <div class="ml-[300px] bg-slate-400 rounded-md w-[300px] ">

        <form method="post" class="p-3 ml-8">
            <div class="mb-2 ">
                <label class="text-white">Name</label>
                <input type="text" class="border border-2 px-1 rounded-md bg-slate-300
                    focus:outline focus:outline-violet-300 mr-10" type="text" name="name" value="@Model.clientInfo.name" />
            </div>
            <div class="mb-2">
                <label class="text-white">Email</label>
                <input type="email" class="border border-2 px-1 rounded-md bg-slate-300
                         mr-10   " name="email" value="@Model.clientInfo.email" />
                <!--<p class="invisible peer-invalid:visible text-red-600 text-xs">
                    Please provide a valid email address.
                </p>focus:outline focus:outline-violet-300 peer-->
            </div>
            <div class="mb-2">
                <label class="text-white">Phone</label>
                <input type="text" class="border border-2 px-1 rounded-md bg-slate-300
                            focus:outline focus:outline-violet-300 mr-10" type="text" name="phone" value="@Model.clientInfo.phone" />
            </div>
            <div class="mb-2">
                <label class="text-white">Address</label>
                <input type="text" class="border border-2 px-1 rounded-md bg-slate-300
                            focus:outline focus:outline-violet-300 mr-10" type="text" name="address" value="@Model.clientInfo.address" />
            </div>

           
            <div class="mb-1">
                <button type="submit" class="p-1  text-sm text-white active:text-slate-200 bg-blue-500 rounded-md active:bg-slate-400">Submit</button>
                <button class="p-1  text-sm bg-blue-500 rounded-md">
                    <a href="/Clients" class="no-underline text-red-300">Cancel</a>
                </button>
            </div>
            @if (Model.successMessage.Length > 0)
            {
                <div class="text-center py-1 text-sm">
                    <div class="p-2 bg-green-800 items-center text-green-100 leading-none lg:rounded-full flex lg:inline-flex" role="alert">
                        <span class="font-semibold mr-2 text-left flex-auto">@Model.successMessage</span>
                        <svg class="fill-current opacity-75 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M12.95 10.707l.707-.707L8 4.343 6.586 5.757 10.828 10l-4.242 4.243L8 15.657l4.95-4.95z" /></svg>
                    </div>
                </div>
            }
        </form>
    </div>

</body>

</html>